<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!--
    generally used to contain one view only
    that's for frame layout
    -->


    <!--
    generally used to contain one view only
    that's for frame layout
    -->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center|left"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView style="@style/text_style"
            android:text="x2"
            />
        <TextView style="@style/text_style"
            android:text="%"
            />
        <TextView style="@style/text_style"
            android:text="1/x"
            />

        <TextView style="@style/text_style"
            android:text="c"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView style="@style/text_style"
            android:text="8"
            />
        <TextView style="@style/text_style"
            android:text="7"
            />
        <TextView style="@style/text_style"
            android:text="9"
            />

        <TextView style="@style/text_style"
            android:text="+"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView style="@style/text_style"
            android:text="4"
            />
        <TextView style="@style/text_style"
            android:text="5"
            />
        <TextView style="@style/text_style"
            android:text="6"
            />

        <TextView style="@style/text_style"
            android:text="-"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView style="@style/text_style"
            android:text="1"
            />
        <TextView style="@style/text_style"
            android:text="2"
            />
        <TextView style="@style/text_style"
            android:text="3"
            />

        <TextView style="@style/text_style"
            android:text="x"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView style="@style/text_style"
            android:text="."
            />
        <TextView style="@style/text_style"
            android:text="0"
            />
        <TextView style="@style/text_style"
            android:text="="
            />

        <TextView style="@style/text_style"
            android:text="/"
            />


    </LinearLayout>






</LinearLayout>