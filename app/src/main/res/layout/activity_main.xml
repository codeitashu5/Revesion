<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!--
    generally used to contain one view only
    that's for frame layout
    -->


    <!--
    Now we are going to do relative and constraint layout
    very power-full layouts for you to create some complex design
    in much more simpler way
    -->
   <!--
    Relative layout
    making the second layout
   -->


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_centerInParent="true"
        />
    <TextView
         android:id="@+id/text_photo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="24sp"
         android:layout_centerInParent="true"
         android:layout_above="@+id/imageView"
         android:layout_margin="10dp"
         android:text="Ashutosh"
        />

    <TextView
        android:id="@+id/text_tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Yes"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/text_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:text="No"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_marginStart="10"
        android:layout_marginTop="10"
        android:layout_marginEnd="10"
        android:layout_marginBottom="10"
        android:layout_toEndOf="@+id/imageView"
        android:text="Random2"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/r1"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="Random1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="Random3"
        android:textSize="24sp" />

</RelativeLayout>